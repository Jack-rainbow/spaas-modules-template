{
      "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
          "esnext",
          "esnext.asynciterable",
          "es5",
          "es6",
          "es7",
          "dom"
        ],
        "jsx": "preserve",
        "jsxFactory": "h",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "baseUrl": "./main",
        "experimentalDecorators":true,
        "noImplicitAny": false,
        "paths": {
          "~/*": [
            "./*"
          ],
          "@/*": [
            "./*"
          ],
        },
        "types": [
          "@types/node",
          "@nuxt/types",
          "@nuxt/vue-app",
          "@types/webpack-env",
        ]
      },
      "include": [
        "main/**/*.ts",
        "main/**/*.tsx",
        "main/**/*.vue",
        "modules/**/*.ts",
        "modules/**/*.tsx"
      ],
      "exclude": [
        "node_modules",
        "main/config/pont-template-nuxt.ts"
      ]
    }
